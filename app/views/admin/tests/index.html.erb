<h1><%= t('.header') %></h1>

<h2>
  <%= link_to t('.new'), new_admin_test_path%>
</h2>
<table>
  <tr>
    <th><%= t('.test_table_title') %></th>
    <th><%= t('.tests_table_count') %></th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= link_to test.title, admin_test_path(test) %></td>
      <td><%= link_to t('.edit'), edit_admin_test_path(test) %></td>
      <td><%= test.questions.count %></td>
      <td><%= button_to t('.start'), start_test_path(test) %></td>
    </tr>
  <% end %>
</table>
<br/>
