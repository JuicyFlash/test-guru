<h1>Tests</h1>

<h2>
  <%= link_to 'New test', new_admin_test_path%>
</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Questions count</th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= link_to test.title, admin_test_path(test) %></td>
      <td><%= link_to 'Edit', edit_admin_test_path(test) %></td>
      <td><%= test.questions.count %></td>
      <td><%= button_to 'Start', start_test_path(test) %></td>
    </tr>
  <% end %>
</table>
<br/>
