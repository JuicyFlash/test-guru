<div class="col-6 md-4">
<%= form_with model: [:admin, @test], local: true do |form| %>
  <h3><%= test_header(@test) %></h3>

    <div class="card border-primary">
      <div class="card-body">
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, id: :test_title, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :level %>
          <%= form.text_field :level, id: :test_level, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :category_id %>
          <%= form.collection_select :category_id, Category.all, :id, :title, prompt: t('helpers.select.test.prompt'), class: 'form-select'  %>
        </p>
        <p>
        <p>
          <%= form.label :ready %>
          <%= form.check_box :ready, id: :test_ready%>
        </p>
          <%= form.submit class: 'btn btn-primary btn-sm' %>
        </p>
        <%= link_to t('.back'), admin_tests_path %>
      </div>
    </div>
  </div>
<% end %>




