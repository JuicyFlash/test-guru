<%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <h1><%= question_header(@question) %></h1>
  <p>
    <%= form.label :body %> <br>
    <%= form.text_field :body %> <br>
  </p><br>
  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', admin_test_path(@question.test_id||=params[:test_id]) %>
