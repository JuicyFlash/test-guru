<%= form_with url: resource_path, model: @question, local: true do |form| %>
  <h1><%= question_header(@question) %></h1>
  <p>
    <%= form.label :body, "Вопрос" %> <br>
    <%= form.text_field :body %> <br>
  </p><br>
  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Назад', test_path(@question.test_id||=params[:test_id]) %>
